
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forklift Operator Assignment</title>
    <link rel="stylesheet" href="/styles.css">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <link href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/header') %>
    <div class="container mt-4">
        <h1 class="mb-4">Forklift Operator Assignment</h1>
        <form id="assignmentForm">
            <div class="form-group col-md-4">
                <label for="date">Date:</label>
                <input type="date" id="date" name="date" class="form-control" value="<%= date %>" required>
            </div>

            <div class="form-group col-md-4">
                <label for="processOrder">Process Order #:</label>
                <select id="processOrder" name="processOrder" class="form-control">
                    <% processOrders.forEach(function(order) { %>
                        <option value="<%= order %>"><%= order %></option>
                    <% }); %>
                </select>
            </div>

            <div class="form-group col-md-4">
                <label for="forkliftOperator">Forklift Operator:</label>
                <select id="forkliftOperator" name="forkliftOperator" class="form-control">
                    <% forkliftOperators.forEach(function(operator) { %>
                        <option value="<%= operator %>"><%= operator %></option>
                    <% }); %>
                </select>
            </div>

            
        </form>
    </div>



    <script src="/scripts.js"></script>
    <script>
        $(document).ready(function() {
            // Example: Fetch additional data when a specific action happens
            $('#someTrigger').on('change', function() {
                $.ajax({
                    url: '/api/other-data',
                    method: 'GET',
                    success: function(data) {
                        // Clear and populate new options based on fetched data
                        $('#processOrder').empty();
                        data.processOrders.forEach(function(order) {
                            $('#processOrder').append(new Option(order, order));
                        });
                    },
                    error: function(err) {
                        console.error('Error fetching data:', err);
                    }
                });
            });
        });
        
    </script>
</body>
</html>

